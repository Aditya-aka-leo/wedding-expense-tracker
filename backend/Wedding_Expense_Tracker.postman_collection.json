{
  "info": {
    "name": "Wedding Expense Tracker API",
    "description": "Complete API collection for Wedding Expense Tracker",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api"
    },
    {
      "key": "adminToken",
      "value": ""
    },
    {
      "key": "userToken",
      "value": ""
    },
    {
      "key": "taskId",
      "value": ""
    },
    {
      "key": "expenseId",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register Admin",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": "{{baseUrl}}/auth/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"mobile\": \"9876543210\",\n  \"pin\": \"1234\",\n  \"role\": \"admin\"\n}"
            }
          }
        },
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": "{{baseUrl}}/auth/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"mobile\": \"9876543211\",\n  \"pin\": \"5678\"\n}"
            }
          }
        },
        {
          "name": "Login Admin",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": "{{baseUrl}}/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"mobile\": \"9876543210\",\n  \"pin\": \"1234\"\n}"
            }
          }
        },
        {
          "name": "Get Me",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{adminToken}}"}],
            "url": "{{baseUrl}}/auth/me"
          }
        },
        {
          "name": "Get All Users (Admin)",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{adminToken}}"}],
            "url": "{{baseUrl}}/auth/users"
          }
        }
      ]
    },
    {
      "name": "Budget",
      "item": [
        {
          "name": "Create Budget",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{adminToken}}"}
            ],
            "url": "{{baseUrl}}/budget",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"totalBudget\": 1000000\n}"
            }
          }
        },
        {
          "name": "Get Budget",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{adminToken}}"}],
            "url": "{{baseUrl}}/budget"
          }
        },
        {
          "name": "Get Budget Summary",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{adminToken}}"}],
            "url": "{{baseUrl}}/budget/summary"
          }
        }
      ]
    },
    {
      "name": "Tasks",
      "item": [
        {
          "name": "Create Task",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{adminToken}}"}
            ],
            "url": "{{baseUrl}}/tasks",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Venue\",\n  \"estimatedCost\": 200000,\n  \"description\": \"Wedding venue booking\"\n}"
            }
          }
        },
        {
          "name": "Get All Tasks",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{adminToken}}"}],
            "url": "{{baseUrl}}/tasks"
          }
        },
        {
          "name": "Get Single Task",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{adminToken}}"}],
            "url": "{{baseUrl}}/tasks/{{taskId}}"
          }
        },
        {
          "name": "Update Task",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{adminToken}}"}
            ],
            "url": "{{baseUrl}}/tasks/{{taskId}}",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"Completed\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Expenses",
      "item": [
        {
          "name": "Create Expense",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{userToken}}"}
            ],
            "url": "{{baseUrl}}/expenses",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"task\": \"{{taskId}}\",\n  \"description\": \"Advance payment\",\n  \"amount\": 50000,\n  \"date\": \"2025-10-01\"\n}"
            }
          }
        },
        {
          "name": "Get All Expenses",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{adminToken}}"}],
            "url": "{{baseUrl}}/expenses"
          }
        },
        {
          "name": "Get Pending Expenses",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{adminToken}}"}],
            "url": "{{baseUrl}}/expenses?status=pending"
          }
        },
        {
          "name": "Approve Expense",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{adminToken}}"}
            ],
            "url": "{{baseUrl}}/expenses/{{expenseId}}/status",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"approved\"\n}"
            }
          }
        },
        {
          "name": "Reject Expense",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{adminToken}}"}
            ],
            "url": "{{baseUrl}}/expenses/{{expenseId}}/status",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"rejected\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Dashboard",
      "item": [
        {
          "name": "Admin Dashboard",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{adminToken}}"}],
            "url": "{{baseUrl}}/dashboard/admin"
          }
        },
        {
          "name": "User Dashboard",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{userToken}}"}],
            "url": "{{baseUrl}}/dashboard/user"
          }
        },
        {
          "name": "Expense Breakdown",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{adminToken}}"}],
            "url": "{{baseUrl}}/dashboard/expense-breakdown"
          }
        },
        {
          "name": "Analytics",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{adminToken}}"}],
            "url": "{{baseUrl}}/dashboard/analytics"
          }
        }
      ]
    }
  ]
}
